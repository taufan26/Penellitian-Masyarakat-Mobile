<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LogbookDetailPengabdianActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:background="#3161FF"
            android:padding="20dp">

            <TextView
                android:id="@+id/txtdasboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Logbook  Detail"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtdasboard"
                android:layout_marginTop="6dp"
                android:text="SIMTABMAS POLINDRA"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/logo_polindra" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:padding="10dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/bookmark"
                android:layout_gravity="center"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Judul Usulan : "
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/detail_logbook_judul_pengabdian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:text="Judul"
                    android:textSize="18sp"
                    android:textColor="#131313"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Tanggal Logbook : "
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/logbook_edit_tanggal_pengabdian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Tanggal"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:textSize="20sp"
                    android:layout_below="@+id/tx_tambah"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="5dp"
                    android:text="Uraian Kegiatan : "
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/logbook_edit_kegiatan_pengabdian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Uraian Kegiatan"
                    android:inputType="textMultiLine"
                    android:minLines="6"
                    android:gravity="top|start"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Presentase Logbook : "
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:layout_marginTop="20dp"
                    android:id="@+id/logbook_edit_presentase_pengabdian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Presentase %"
                    android:inputType="number"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logbook_edit_back_pengabdian"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    android:background="@drawable/background_blue"
                    android:layout_marginEnd="30dp"/>

                <ImageView
                    android:id="@+id/logbook_edit_save_pengabdian"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_save"
                    android:background="@drawable/background_blue"
                    android:layout_marginRight="30dp"/>

                <ImageView
                    android:id="@+id/logbook_edit_delete_pengabdian"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:background="@drawable/background_blue"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</ScrollView>