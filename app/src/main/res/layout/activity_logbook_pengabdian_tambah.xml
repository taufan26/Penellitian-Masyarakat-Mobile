<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.LogbookPengabdianTambahActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="99dp"
            android:background="#3161FF"
            android:padding="20dp"
            android:id="@+id/rv">

            <TextView
                android:id="@+id/txtdasboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tambah Logbook"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtdasboard"
                android:layout_marginTop="6dp"
                android:text="SIMTABMAS POLINDRA"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/logo_polindra" />

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="5dp"
            android:padding="10dp"
            android:id="@+id/ll1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:text="Judul Usulan : "
                    android:textSize="18sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/logbook_tambah_judul_pegabdian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:layout_marginRight="2dp"
                    android:text="Judul"
                    android:textSize="18sp"
                    android:textColor="#131313"/>
            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_p"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/ll1">

            <TextView
                android:id="@+id/tx_tambah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Tambah Logbook : "
                android:textSize="18sp"
                android:textColor="@color/black"/>

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/logbook_tambah_tanggal_pengabdian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:textSize="20sp"
                android:layout_below="@+id/tx_tambah"/>

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/logbook_tambah_kegiatan_pengabdian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Uraian Kegiatan"
                android:inputType="textMultiLine"
                android:minLines="6"
                android:gravity="top|start"
                android:layout_below="@+id/logbook_tambah_tanggal_pengabdian"/>

            <EditText
                android:layout_marginTop="20dp"
                android:id="@+id/logbook_tambah_presentase_pengabdian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logbook_tambah_kegiatan_pengabdian"
                android:hint="Presentase %"
                android:inputType="number"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_below="@+id/rl_p"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/logbook_pengabdian_tambah_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="62dp"
                    android:layout_marginTop="18.7dp"
                    android:layout_marginRight="62dp"
                    android:background="@drawable/blue_fill__rounded_color"
                    android:fontFamily="@font/poppins_medium"
                    android:gravity="center"
                    android:paddingTop="14dp"
                    android:paddingBottom="14dp"
                    android:text="Simpan"
                    android:textColor="#ffffff"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>