<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ProfileActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="20dp"
        android:background="#3161FF">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/profile"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Taufan Yusuf Nugroho"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/poppins_medium"
            android:layout_toRightOf="@id/profile_image"
            android:layout_centerVertical="true"
            android:includeFontPadding="false"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="taufanyusuf25@gmail.com"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:fontFamily="@font/poppins_medium"
            android:layout_toRightOf="@id/profile_image"
            android:layout_below="@id/profile_name"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginTop="-100dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#3161FF"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/document"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/usulan_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/usulan_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usulan"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_below="@id/usulan_label"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            app:cardBackgroundColor="#3161FF"
            app:cardElevation="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/bookmark"
                    android:layout_centerHorizontal="true"/>

                <TextView
                    android:id="@+id/logbook_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="12"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/poppins_medium"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:id="@+id/logbook_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logbook"
                    android:includeFontPadding="false"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:layout_below="@id/logbook_label"
                    android:layout_centerHorizontal="true"/>


            </RelativeLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15">

        <Button
            android:id="@+id/button_anggota"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_btn"
            android:drawableStart="@drawable/ic_1"
            android:drawablePadding="20dp"
            android:elevation="3dp"
            android:paddingStart="20dp"
            android:text="Lihat Keanggotaan"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_biodata"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_btn"
            android:drawableStart="@drawable/ic_2"
            android:drawablePadding="20dp"
            android:elevation="3dp"
            android:paddingStart="20dp"
            android:text="Lihat Biodata"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_setting"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_btn"
            android:drawableStart="@drawable/ic_3"
            android:drawablePadding="20dp"
            android:elevation="3dp"
            android:paddingStart="20dp"
            android:text="Setting"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/button_notif"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_btn"
            android:drawableStart="@drawable/ic_4"
            android:drawableEnd="@drawable/circle_red"
            android:paddingEnd="20dp"

            android:drawablePadding="20dp"
            android:elevation="3dp"
            android:paddingStart="20dp"
            android:text="Notifikasi"
            android:textAlignment="viewStart"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/button_home"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/background_blue"



            android:elevation="3dp"
            android:text="Kembali ke Home Page"
            android:textColor="#ffffff"

            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>